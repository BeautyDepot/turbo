{% stylesheet %}
    .featured-map {
        display: flex;
        flex-wrap: wrap;
        color: #7f8c8d;
        padding-bottom: 30px;
        margin: 0 auto;
    }
    .title{
        text-align: center;
        width: 100%;
    }

    .each-map{
        width: 50%;
        height: auto;
        margin: 10px 0;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;

    }
    .map-description{
        margin: 0;
        color: #7f8c8d;
    }
    .map-caption{
        width: 80%;
    }
    .map-title{
        color: #03a196;
    }

    .map{
        width: 80%;
    }
    .map-image{
        width: 100%;
        height: 300px;
    }




   
@media only screen and (max-width: 768px) {
 .map-image{
        width: 100%;
        height: 200px;
    }


}

@media only screen and (max-width: 400px) {
 .each-map{
        width: 100%;
        height: auto;
        margin: 10px 0;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;

    }


}
{% endstylesheet %}




